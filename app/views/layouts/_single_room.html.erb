<div id="single_room">
  <h4 class="text-center"><%= @single_room.is_private ? 
  @user&.email.split("@").first : @single_room.name %> </h4>

  <%= turbo_stream_from @single_room %>
  <div id="messages" class="mb-5">
    <%= render @messages %>
  </div>
  <%= render 'messages/new_message_form' %>
</div>