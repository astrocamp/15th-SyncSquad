<div id="single_room" class="relative">
  <div class="shadow-lg border-b border-l border-gray-100 w-full">
    <h4 class="text-center text-3xl p-3 bg-slate-50"><%= @single_room.room_type == 'single_room' ? 
   format_user_name(@user) : @single_room.name %> </h4>
  </div>

  <div id="messages" class="mb-5 bg-gray-50" data-controller="scroll">
    <%= turbo_stream_from @single_room %>
    <%= render @messages %>
  </div>
  <%= render 'messages/new_message_form' %>
</div>
