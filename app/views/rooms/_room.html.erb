<div class="flex items-center gap-3 ml-5 content-center hover:text-blue-700 transition duration-500 text-2xl">
  <%= link_to room.name, room_path(room, tab_type: 'group_chat'), class: "p-3 b-2" %>

	<% if room.private_room?%>
    <% unread_count = room.unread_messages_count(@current_user) %>
  	<% if unread_count > 0 %>
      <span class="unread-count"><%= unread_count %></span>
    <% end %>
  <% end %>
</div>
