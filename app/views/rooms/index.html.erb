<div id="total" class="flex h-screen overflow-hidden" data-controller="chatroom_list">
  <div id="sidenav" class="flex flex-col items-center w-10 pt-4 bg-gray-400 md:w-20">
    <i class="fa-solid fa-users p-3 text-xl md:text-3xl <%= 'text-blue-700' if params[:tab_type] == 'single_chat' %>" data-action="click->chatroom_list#showUsers"></i>
    <i class="fa-solid fa-message p-3 text-xl md:text-3xl <%= 'text-blue-700' if params[:tab_type] == 'group_chat' %>" data-action="click->chatroom_list#showRooms"></i>
  </div>

  <div id="left-side"  data-chatroom_list-target="leftSide" class="flex hidden bg-gray-100 md:w-2/12 md:block">
    
    <div>
      <div id="users-list" class="h-full overflow-y-scroll <%= 'hidden' if params[:tab_type] == 'group_chat' %>"        data-chatroom_list-target="usersList">
        <%= render "/shared/users_list"%>
      </div>
      
      <div id="rooms-list" class="h-full overflow-y-scroll <%= 'hidden' if params[:tab_type] == 'single_chat' %>" data-chatroom_list-target="roomsList">

        <%= render "/shared/rooms_list"%>
      </div>
    </div>
  </div>

  <div id="room_container" class="flex-grow break-words" >
    <div class="w-full">
      <%= render partial: 'layouts/single_room', locals: { single_room: @single_room, messages: @messages, users: @users } if @single_room %>    
    </div>
  </div>

</div>