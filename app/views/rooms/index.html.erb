<div class="flex justify-between gap-x-20 text-cyan-600 p-3">
  <h3 class="text-2xl pt-1 text-cyan-600">
    歡迎 <%= current_user.name %> ლ(╹◡╹ლ)</h3>
</div>

<div id="total" class="flex mt-10 px-5 space-x-5 w-full">

  <div id="left-side" class="w-2/12">
    <div id="chat-room" class="mt-5">
      <h3 class="text-2xl text-orange-400 mt-4">房間列表</h3>
      <%= turbo_stream_from "rooms"%>
      <div id="rooms">
        <%= render @room%>
      </div>
            <div class="mt-8">
        <%= render "layouts/new_room_form" %>
      </div>
    </div>
  </div>

  <div id="room_container" class="flex-grow" >
    <div class="w-full">
      <%= render partial: 'layouts/single_room', locals: { single_room: @single_room, messages: @messages, user: @user } if @single_room %>    
    </div>
  </div>

  <div id="user-list" class="w-2/12">
        <h4 class= "text-2xl text-cyan-400 bg-slate-600	text-center p-3"> ALL CONTATS </h4>
    <%= turbo_stream_from "users" %>
    <div id="users" class="bg-cyan-200 p-0">
      <%= render @users %>
    </div>
  </div>
</div>