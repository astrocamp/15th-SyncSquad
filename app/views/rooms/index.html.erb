<div class="flex justify-between p-3 gap-x-20 text-cyan-600">
  <div name="create room" class="flex gap-3">
    
    <h1 class="text-3xl"><%= link_to "公開聊天室", new_room_path(modal_type: "public"), data: { turbo_frame: "modal" } %></h1>
    <h1 class="text-3xl"><%= link_to "私人聊天室", new_room_path(modal_type: "private"), data: { turbo_frame: "modal" } %></h1>  </div>

  <h3 class="pt-1 text-2xl text-cyan-600">
    歡迎 <%= current_user.name %></h3>
</div>

<div id="total" class="flex mt-10" data-controller="chatroom_list">

  <div id="left-side" class="w-2/12 bg-yellow-300">
    <div id="public-room">
      <h3 class="p-3 text-2xl text-center text-orange-400 bg-amber-200"><%= t('rooms.groups') %></h3>
      <%= turbo_stream_from "rooms_company_#{current_user.company_id}"%>
      <div id="rooms">
        <div>
          <%= render @rooms%>
        </div>
      </div>
    </div>
  
    <div id="privacy-room" class="mt-5">
      <h3 class="mt-4 text-2xl text-orange-400">私人房間</h3>
      <%= turbo_stream_from "private_rooms_for_user_#{current_user.id}" %>
      <div id="private_rooms">
        <%= render @private_groups %>
      </div>
    </div>
  </div>

  <div id="room_container" class="flex-grow bg-gray-100" >
    <div class="w-full">
      <%= render partial: 'layouts/single_room', locals: { single_room: @single_room, messages: @messages, users: @users } if @single_room %>    
    </div>
  </div>
  
  <div id="user-list" class="w-2/12 bg-cyan-200">
        <h4 class= "p-3 text-2xl text-center text-cyan-400 bg-slate-600"> <%= t('rooms.contacts') %> </h4>
    <%= turbo_stream_from "users" %>
    <div id="users" class="p-0 bg-cyan-200">
      <%= render @users %>
    </div>
  </div>
