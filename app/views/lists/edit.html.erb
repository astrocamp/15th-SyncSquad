<%= form_with model: @list, url: list_path, method: 'PATCH', data: {turbo: false } do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div data-controller="color-picker">
    <%= form.label :color %>
    <%= form.hidden_field :color, data: {color_picker_target: 'input', color_update_url: list_path(@list), redirect_to_url: project_path(@list.project) } %>
    <div data-color-picker-target="button"></div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>


