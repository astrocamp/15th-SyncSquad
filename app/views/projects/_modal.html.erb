<turbo-stream action="replace" target="comment_1">
    <template>
        <div data-controller="modal">
            <!-- Modal toggle -->
            <%= content_tag(:button, 'Create Project', data: {
                modal_target: "default-modal",
                modal_toggle: "default-modal"
            }, class: "block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300
                        font-medium rounded-lg text-sm px-5 py-2.5 text-center
                        dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800") %>
        
            <!-- Main modal -->
            <div data-modal-target="modal.box" id="default-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                <div class="relative p-4 w-full max-w-2xl max-h-full">
                    <!-- Modal content -->
                    <% if action_name == 'new' %>
                        <%= render 'new_modal_content' %>
                    <% elsif action_name == 'edit' %>
                        <%= render 'edit_modal_content' %>
                    <% end %>
                </div>
            </div>
        </div>
    </template>
</turbo-stream>