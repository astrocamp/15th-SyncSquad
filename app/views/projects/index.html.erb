<div class="flex">
    <aside class="flex-initail w-80">
        <h2 class="text-2xl text-gray-900 dark:text-white"><%= t('project.affiliated_projects') %></h2>
        <ul id="aside_list">
            <%= render 'aside_projects', project: @projects %>
        </ul>
    </aside>
    <main class="flex-auto">
        <header class="flex">
            <%= content_tag(:h1, t('project.affiliated_projects'), class: "text-3xl text-gray-900 dark:text-white") %>
        </header>
        <div>
            <%= render 'form', project: @project %>
        </div>
        <ul id="main_list">
            <%= render 'main_projects', project: @projects %>
        </ul>
    </main>
</div>

