<% projects.each do |project| %>
  <li class="flex justify-between py-2">
    <%= link_to project.title, project, class: "grow pl-4", data: {turbo: false} %>
    <%= link_to edit_project_path(project), data: { turbo_frame: "modal", drawer_hide:"drawer" }, class: 'p-2 mr-1 text-gray-400 hover:text-gray-900' do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
  </li>
<% end %>