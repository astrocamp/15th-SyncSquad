<%= @project.title %>
<%= @project.description %>
<%= User.find(@project.owner_id).nick_name %>
<%= link_to 'X', project_path(@project), data: { turbo_method: 'delete', turbo_confirm: '確定刪除專案嗎？'} %>

<%= form_with(model: @project) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>
