<div id="project_show">
  <%= @project.title %>
  <%= @project.description %>
  <%= @project.owner.nick_name %>
  <%= link_to 'X', project_path(@project), data: { turbo_method: 'delete', turbo_confirm: '確定刪除專案嗎？'} %>
  <%= link_to  edit_project_path, data: { turbo_frame: "modal" } do%>
    <i class="fa-solid fa-ellipsis"></i>
  <% end %>
</div>
<hr>

<div class="flex gap-2">
  <ul id="all_list" class="flex gap-2" data-controller="sortable" >
    <%= render partial: 'list', collection: @project.lists.rank(:row_order)%> 
  </ul>
  <div>
    <%= link_to  new_project_list_path(@project), data: { turbo_frame: "modal" } do%>
        <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512"><path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/></svg>
    <% end %>
  </div>
</div>