<div class="absolute flex flex-col w-full h-screen -top-12">
  <div class="flex-none m-6 mt-16 min-h-24">
    <%= render partial: 'head', locals: {project: @project} %>
  </div>
  <div class="flex flex-1 px-6 overflow-hidden" style="max-height: calc(100% - 12rem);">
    <ul id="all_list" class="flex gap-4 overflow-x-auto" data-controller="sortable" >
      <%= render partial: 'list', collection: @project.lists.rank(:row_order)%> 
      <ul>
        <%= link_to  new_project_list_path(@project),
            data: { turbo_frame: "modal" },
            class: 'ml-4 shadow-sm w-52 block text-center rounded-lg shadow-gray-400 bg-white' do%>
          <i class="fa-solid fa-plus"></i>
        <% end %>
      </ul>
    </ul>
  </div>
</div>