<%= content_for :modal_title do %>
  <%= t('project.new_task') %>
<% end %>
<%= render 'shared/modal' do %>
  <%= form_with modal: @task, url: create_task_project_path do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :list_id %>
      <%= form.text_field :list_id %>
    </div>
    <div data-controller="datepicker">
      <div>
        <%= form.label :started_at %>
        <%= form.datetime_field :started_at, value: @started_at_value, data:{datepicker_target:"startedAt"} %>
      </div>
      <div>
        <%= form.label :ended_at %>
        <%= form.datetime_field :ended_at, value: @ended_at_value, data:{datepicker_target:"endedAt"}  %>
      </div>
      <div>
        <%= form.label :all_day_event %>
        <%= form.check_box :all_day_event, checked: params[:allDay] == "true", data:{datepicker_target:"allDay", action:"click->datepicker#clickedAllDay"} %>
      </div>
    </div>
    <!-- Modal footer -->
    <div class="flex items-center justify-end p-4 border-t border-gray-200 rounded-b md:p-5 dark:border-gray-600">
      <%= form.submit class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
      <button data-action="click->turbomodal#close" type="button" class="ms-3 text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">取消</button>
    </div>
  <% end %>
<% end %>