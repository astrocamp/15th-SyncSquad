<div class="w-48">
    <div>
        <div class="w-full h-1" style="background-color: <%= list.color %>;"></div>
        <%= content_tag :h2, list.title, class: "font-bold" %>
        <%= link_to '編輯', edit_list_path(list.id) %>
        <%= link_to '刪除', list_path(list), data: {turbo_method: 'delete'} %>
    </div>
    <div>
        <ul>
            <% list.tasks.rank(:row_order).each do |task| %>
                <%= render task %>
            <% end %>
        </ul>
    </div>
    <div>
        <%= form_with model: [list, list.tasks.new], url: list_tasks_path(list.id), data: {turbo: false} do |form| %>
            <div>
                <%= form.text_field :title, class: "w-full" %>
            </div>
            <%= form.submit %>
        <% end %>
    </div>
</div>