<%= turbo_frame_tag :modal do %>
  <div data-controller="turbomodal"
          data-action="click->turbomodal#clickOutside"
          tabindex="-1" aria-hidden="true" class=" overflow-y-auto overflow-x-hidden fixed z-50 justify-center items-center w-full inset-0  max-h-full bg-slate-800/[.5]">
    <div class="relative w-full max-w-md max-h-full p-4 -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
        <!-- Modal content -->
        <div class="relative overflow-hidden bg-white rounded-lg shadow ">   
        <!-- Modal header -->
        <div class="flex items-center justify-between p-4 border-b rounded-t md:p-5 ">
            <h3 class="text-lg font-semibold text-gray-900 truncate ">
                <%= yield(:modal_title) %>
            </h3>
            <button type="button" class="inline-flex items-center justify-center flex-none w-8 h-8 text-sm text-gray-400 bg-transparent rounded-lg hover:bg-gray-200 hover:text-gray-900 ms-auto " data-action="click->turbomodal#close">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
        </div>
      <!-- Modal body -->
      <div  data-action="turbo:submit-end->turbomodal#submitEnd">
        <%= yield %>
      </div>
    </div>
<% end %>
