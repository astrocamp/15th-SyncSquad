<div id="chat-rooms">
  <div id="public-room">
      <h3 class="text-2xl p-3">Rooms</h3>
      <%= turbo_stream_from "rooms_company_#{current_user.company_id}"%>

      <div id="rooms">
        <div>
          <%= render @rooms%>
        </div>
      </div>
    </div>
  
    <div id="privacy-room" class="mt-5">
      <%= turbo_stream_from "private_rooms_for_user_#{current_user.id}" %>
      <div id="private_rooms">
        <%= render @private_groups %>
      </div>
    </div>
</div>