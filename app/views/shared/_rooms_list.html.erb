<div id="public-room" class="flex items-center justify-between w-full shadow-lg border-b border-l bg-gray-200 z-11">
    <h3 class="text-xl p-4">Public Rooms</h3>
    <div id="public-room-modal">    
      <%= link_to new_room_path(modal_type: "public"), data: { turbo_frame: "modal" } do %>
        <i class="fa-solid fa-square-plus fa-2x mr-3"></i>
      <% end %>
    </div>
</div>

<%= turbo_stream_from "rooms_company_#{current_user.company_id}"%>
<div id="rooms">
