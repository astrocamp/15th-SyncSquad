<h1 class="text-2xl">公司登入</h1>

<%= form_with(url: sessions_path,
              scope: 'company',
              data: {turbo: false}) do |form| %>

  <div>
    <%= form.label :email %><br />
    <%= form.email_field :email, class: 'border-2 border-black' %>
  </div>

  <div>
    <%= form.label :password %><br />
    <%= form.password_field :password, class: 'border-2 border-black' %>
    <%= form.submit "登入", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    尚未註冊? 請先<%= link_to '公司註冊', new_company_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    
  </div>

 
<% end %>


