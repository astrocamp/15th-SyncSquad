<main>
    <section class="relative">
        <div class="flex flex-wrap-reverse max-w-screen-lg pb-5 m-auto md:flex-wrap lg:flex-nowrap">
            <div class="flex-initial w-full md:w-[58%]">
                <div class="grid grid-cols-8 grid-rows-4">
                    <div class="col-start-5 col-end-8 row-start-1 row-end-2 p-2 pt-12">
                        <%= content_tag :div, t('main.calendar'),
                            class: "font-bold tracking-wide rounded-lg bg-[#3778EA] p-2 text-white block text-center" %>
                        <div class="block w-0 h-0 ml-12 border-solid" style="border-width: 12px; border-color: #3778EA transparent transparent #3778EA;"></div>
                    </div>
                    <div class="relative col-start-3 col-end-7 row-start-2 row-end-3 p-2 pr-20">
                        <%= content_tag :div, t('main.project'),
                            class: "font-bold tracking-wide rounded-lg bg-[#E96F92] p-2 text-white block text-center" %>
                        <div class="absolute right-0 block w-0 h-0 mr-32 border-solid" style="border-width: 12px; border-color: #E96F92 #E96F92 transparent transparent;"></div>
                    </div>
                    <div class="relative col-start-5 col-end-8 row-start-3 row-end-4 pl-2 pr-16 sm:top-0 -top-12">
                        <%= content_tag :div, t('main.chatroom'), 
                            class: "font-bold tracking-wide rounded-lg bg-[#fce95b] p-2 block text-center" %>
                        <div class="absolute right-0 block w-0 h-0 mr-24 border-solid" style="border-width: 12px; border-color: #fce95b transparent transparent #fce95b;"></div>
                    </div>
                    <div class="col-start-2 col-end-8 row-start-2 row-end-5 -z-10">
                        <%= image_tag('laptop.png') %>
                    </div>
                </div>
            </div>
            <div class="flex flex-col items-center justify-center w-full pl-10 pr-10 pt-10 m-auto md:pt-16 lg:pt-8 md:pr-10 lg:p-0 md:w-[42%] justify-items-center max-w-[480px] lg:max-w-[320px]">
                    <p class="text-sm font-light leading-7 tracking-wide text-black lg:text-base md:leading-7 lg:leading-9 md:text-white"><%= t('main.overall_intro') %></p>
            </div>  
        </div>
        <div class="absolute bottom-0 w-full -z-20 max-h-40 md:max-h-full" style="height: calc(75% - 1rem);">
            <div class="right-0 w-3/5 h-full p-2 ml-auto bg-gradient-to-b from-[#15233b] form-20% to-[#18376c]" style="clip-path: polygon(30% 0%, 25% 7%,  8% 92%, 0% 100%, 100% 100%, 100% 0%);"></div>
        </div>
    </section>
    <div data-controller="scroll-reveal" class="bg-gradient-to-b from-[#18376c] via-[#3778EA] via-70% to-100% to-[#3779eaa3]">
        <section id="calendar" class="flex flex-wrap-reverse max-w-screen-lg py-24 m-auto md:flex-wrap lg:flex-nowrap">
            <div class="flex-initial w-full md:w-1/2">
                <div class="inset-0 flex flex-col items-center justify-center text-center">
                    <p data-scroll-reveal-target= "item" data-delay="350ms"
                        class='reveal block bg-[#3778EA] text-white mb-6 py-2 px-8 md:px-16 rounded font-bold mt-8 md:mt-0 md:font-black text-2xl'
                        style= 'clip-path: polygon(10% 0%, 100% 0, 90% 100%, 0% 100%)'><%= t('main.calendar') %></p>
                    <p data-scroll-reveal-target="item" class="reveal w-full px-10 mx-auto text-sm font-light leading-7 tracking-wide text-white lg:text-base md:leading-7 lg:leading-9 md:px-0 md:w-56 lg:w-96" data-delay="450ms"><%= t('main.calendar_intro') %></p>
                </div>
            </div>
            <div class="flex flex-col items-center justify-center w-full pl-10 pr-10 md:pl-0 md:pr-10 lg:p-0 md:w-1/2 justify-items-center">
                <%= image_tag('calendar.png') %>
            </div>
        </section>
        <section id="project" class="flex flex-wrap max-w-screen-lg pb-24 m-auto md:flex-wrap lg:flex-nowrap ">
            <div class="flex-initial w-full pl-10 pr-10 md:w-3/5 md:pr-0 md:pl-10 lg:p-0">
                <%= image_tag('project.png') %>
            </div>
            <div class="w-full pt-0 md:pt-20 md:w-2/5">
                <div class="inset-0 flex flex-col items-center justify-center">
                    <p data-scroll-reveal-target= "item" data-delay="350ms" class='reveal block px-8 py-2 mt-8 mb-6 text-2xl font-bold text-white bg-black rounded md:mt-0 md:font-black md:px-16' style= 'clip-path: polygon(0 0, 90% 0, 100% 100%, 10% 100%);'><%= t('main.project') %> </p>
                    <p data-scroll-reveal-target="item" class="reveal px-10 mx-auto text-sm font-light leading-7 tracking-wide text-white lg:text-base md:leading-7 lg:leading-9 md:px-0 md:w-56" data-delay="450ms"><%= t('main.project_intro') %></p>
                </div>
            </div>
        </section>
    </div>
    <section id="chatroom" class="bg-gradient-to-b from-[#3779eaa3] via-transparent via-60% to-100% to-transparent">
        <div class="relative max-w-screen-lg px-10 pt-6 pb-24 m-auto mb-12 md:mb-0 md:pb-12" style="aspect-ratio: 969/725;">
            <%= image_tag('chatroom.png', class: 'object-cover') %>
            <div data-controller="scroll-reveal" class="absolute inset-x-0 mt-12 text-center lg:mt-24 top-36 md:top-48">
                <p data-scroll-reveal-target= "item" data-delay="350ms" class='reveal mb-6 px-8 py-2 text-2xl font-bold inline-block text-white bg-black rounded md:mt-0 md:font-black md:px-16',
                style='clip-path: polygon(10% 0%, 100% 0, 90% 100%, 0% 100%)'><%= t('main.chatroom') %></p>
                <p data-scroll-reveal-target="item" class="reveal p-4 mx-auto text-sm font-light leading-7 tracking-wide bg-white rounded-lg w-96 sm:w-80 lg:text-base md:leading-7 lg:leading-9 lg:w-96 md:bg-transparent md:px-0" data-delay="450ms"><%= t('main.chatroom_intro') %></p>
            </div>
        </div>
    </section>
</main>
