<main>
    <div>
    <ul class="flex gap-3">
      <li><%= link_to '註冊', new_company_path %></li>
      <li>登入</li>
    </ul>
  </div>
    <section class="flex flex-wrap-reverse max-w-screen-lg m-auto md:flex-wrap lg:flex-nowrap">
        <div class="flex-initial w-full md:w-2/3">
            <div class="grid grid-cols-8 grid-rows-4">
                <div class="col-start-5 col-end-8 row-start-1 row-end-2 p-2 pt-12">
                    <%= link_to '行事曆', '#', 
                        class: "font-medium rounded-lg bg-[#3778EA] p-2 text-white block text-center" %>
                    <div class="block w-0 h-0 ml-12 border-solid" style="border-width: 12px; border-color: #3778EA transparent transparent #3778EA;"></div>
                </div>
                <div class="relative col-start-3 col-end-7 row-start-2 row-end-3 p-2 pr-20">
                    <%= link_to '聊天室', '#', 
                        class: "font-medium rounded-lg bg-[#E96F92] p-2 text-white block text-center" %>
                    <div class="absolute right-0 block w-0 h-0 mr-32 border-solid" style="border-width: 12px; border-color: #E96F92 #E96F92 transparent transparent;"></div>
                </div>
                <div class="relative col-start-5 col-end-8 row-start-3 row-end-4 pl-2 pr-16 sm:top-0 -top-12">
                    <%= link_to '專案管理', '#', 
                        class: "font-medium rounded-lg bg-[#fce95b] p-2 block text-center" %>
                    <div class="absolute right-0 block w-0 h-0 mr-24 border-solid" style="border-width: 12px; border-color: #fce95b transparent transparent #fce95b;"></div>
                </div>
                <div class="col-start-2 col-end-8 row-start-2 row-end-5 -z-10">
                    <%= image_tag('laptop.png') %>
                </div>
            </div>
        </div>
        <div class="flex flex-col items-center justify-center w-full md:w-1/3 justify-items-center">
            <div class="py-8">
                <%= button_tag(
                '公司註冊與登入', 
                type: 'button', 
                class: "w-44 text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center")  %>
            </div>
            <div class="py-8">
                <%= button_tag(
                '員工登入', 
                type: 'button', 
                class: "w-44 py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-300 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700")  %>
            </div>
        </div>
    </section>
    <section class="flex flex-wrap max-w-screen-lg px-16 py-8 pb-24 m-auto gap-x-16 gap-y-8">
        <div id="logo">
            <h1><%= link_to "SyncSquad", root_path , class: "self-center text-2xl font-semibold whitespace-nowrap dark:text-white"%></h1>
        </div>
        <div>
            <nav class="flex flex-wrap gap-x-16 gap-y-8">
                <div>
                    <h2 class="mb-4 font-bold leading-8">公司</h2>
                    <ul>
                        <li>
                            <%= link_to '基本資料', '#' %>
                        </li>
                        <li>
                            <%= link_to '登入與註冊', '#' %>
                        </li>
                    </ul>
                </div>
                <div>
                    <h2 class="mb-4 font-bold leading-8">員工</h2>
                    <ul>
                        <li>
                            <%= link_to '人資系統', '#' %>
                        </li>
                        <li>
                            <%= link_to '行事曆', '#' %>
                        </li>
                        <li>
                            <%= link_to '聊天室', '#' %>
                        </li>
                        <li>
                            <%= link_to '專案管理', '#' %>
                        </li>
                        <li>
                            <%= link_to '登入', '#' %>
                        </li>
                    </ul>
                </div>
                <div>
                    <h2 class="mb-4 font-bold leading-8">聯絡我們</h2>
                    <ul>
                        <li>
                        <%= link_to '開發團隊', '#' %>
                        </li>
                        <li>
                            <%= link_to '隱私權政策', '#' %>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </section>
</main>
